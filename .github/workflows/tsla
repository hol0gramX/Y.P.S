name: TSLA Backtest for 2025-06-26

on:
  workflow_dispatch:  # 允许手动触发
  schedule:
    - cron: "0 4 * * 1-5"  # 每个工作日早上4点自动触发，按需调整

jobs:
  backtest:
    runs-on: ubuntu-latest  # 使用 GitHub 的最新 Ubuntu 环境

    steps:
      # Checkout 仓库中的代码
      - name: Checkout repository
        uses: actions/checkout@v2

      # 设置 Python 环境
      - name: Set up Python
        uses: actions/setup-python@v2
        with:
          python-version: 3.8  # 设置 Python 版本，确保与代码兼容

      # 安装依赖
      - name: Install dependencies
        run: |
          python -m pip install --upgrade pip
          pip install -r requirements.txt  # 确保你的 requirements.txt 中包含所有依赖库

      # 运行回测脚本
      - name: Run TSLA backtest
        run: |
          python tsla_backtest_20250626.py  # 运行回测脚本

      # 可以选择在回测完成后将结果推送到 Discord 或 GitHub Actions logs
      - name: Send to Discord
        if: success()  # 只有回测成功时才发送通知
        run: |
          curl -X POST -H "Content-Type: application/json" \
          -d '{"content": "TSLA Backtest for 2025-06-26 completed successfully!"}' \
          ${{ secrets.DISCORD_WEBHOOK_URL }}
